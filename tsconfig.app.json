{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    "jsx": "react-jsx",

    /* ðŸ”´ IMPORTANT */
    "noEmit": true
  },
  "include": ["src"]
}
